root = true

[*]
indent_style = space
indent_size = 2
max_line_length = 100
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
indent_size = 2

[*.proto]
max_line_length = 80
indent_size = 2

[Makefile]
max_line_length = 120
indent_size = 2

[*.{yml,yaml,json}]
max_line_length = 0
indent_size = 2
